<h1>Listing course_types</h1>

<table class="table table-striped" style="margin-top:10px; float:left;">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_types.each do |course_type| %>
      <tr>
        <td><%= course_type.name %></td>
        <td><%= link_to 'Detalii', course_type, :class => 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Editare', edit_course_type_path(course_type), :class => 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Ștergere', course_type, method: :delete, data: { confirm: 'Ești sigur?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adaugare tip curs', new_course_type_path, :class => 'btn btn-info'%>
