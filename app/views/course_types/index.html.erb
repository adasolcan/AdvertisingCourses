          <td><%= link_to 'Editare', edit_course_type_path(course_type), :class => 'btn btn-mini btn-info' %></td>
          <td><%= link_to 'È˜tergere', course_type, method: :delete, data: { confirm: 'EÈ™ti sigur?' }, :class => 'btn btn-mini btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user and current_user.has_role? :admin%>
  <%= link_to 'Adaugare tip curs', new_course_type_path, :class => 'btn btn-info'%>
<% end %>
