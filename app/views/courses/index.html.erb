<h1>Cursuri</h1>

<table class="table table-striped" style="margin-top:10px; float:left;">
  <thead>
    <tr>
      <th>Denumire</th>
      <th>Descriere</th>
      <th>Nivel</th>
      <th>Tip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.level %></td>
        <td><%= course.course_type_id %></td>
        <td><%= link_to 'Detalii', course, :class => 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Editare', edit_course_path(course), :class => 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Ștergere', course, method: :delete, data: { confirm: 'Ești sigur?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user and current_user.has_role? :admin%>
    <%= link_to 'Adaugare curs', new_course_path, :class => 'btn btn-info' %>
<% end %>

