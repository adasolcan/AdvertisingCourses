  <div class="field">
    <%= f.label :tip_curs %><br>
    <%= f.collection_select :course_type_id, CourseType.order(:name),:id,:name, include_blank: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
