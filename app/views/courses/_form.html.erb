    <%= f.label :descriere %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :nivel %><br>
    <%= f.number_field :level %>
  </div>
  <div class="field">
    <%= f.label :curs_necesar %><br>
    <%= f.collection_select :master_course_id, Course.order(:title),:id,:title, include_blank: true %>
